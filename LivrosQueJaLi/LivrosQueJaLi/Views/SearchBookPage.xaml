<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LivrosQueJaLi.Views.SearchBookPage"
             xmlns:ext="clr-namespace:XFCustomControls.Ext;assembly=XFCustomControls.Ext"
             Title="Pesquisa">
    
    <StackLayout>
        <SearchBar/>

        <ScrollView>
            <StackLayout>

                <ext:ListView
                    ItemsSource="{Binding Books}">
                    <ext:ListView.ItemTemplate>
                        <DataTemplate>
                            <ImageCell
                                ImageSource="{Binding VolumeInfo.ImageLinks.Thumbnail}"
                                Text="{Binding VolumeInfo.Title}"/>
                        </DataTemplate>
                    </ext:ListView.ItemTemplate>

                </ext:ListView>
            </StackLayout>
        </ScrollView>
    </StackLayout>

</ContentPage>